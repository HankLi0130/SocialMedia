<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/distance_36_dp"
        android:layout_marginBottom="@dimen/distance_36_dp"
        android:orientation="vertical"
        android:paddingStart="@dimen/distance_12_dp"
        android:paddingEnd="@dimen/distance_12_dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/view_user_avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            app:cardCornerRadius="50dp"
            app:cardElevation="3dp">

            <ImageView
                android:id="@+id/view_profile_head_shot"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:adjustViewBounds="true"
                android:scaleType="centerCrop"
                tools:src="@drawable/ic_person" />

        </androidx.cardview.widget.CardView>

        <include
            android:id="@+id/view_display_name"
            layout="@layout/card_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_12_dp" />

        <include
            android:id="@+id/view_description"
            layout="@layout/card_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_12_dp" />

        <include
            android:id="@+id/view_first_name"
            layout="@layout/card_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_12_dp" />

        <include
            android:id="@+id/view_last_name"
            layout="@layout/card_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_12_dp" />

        <include
            android:id="@+id/view_birthday"
            layout="@layout/card_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_12_dp" />

        <include
            android:id="@+id/view_email"
            layout="@layout/card_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_12_dp" />

        <include
            android:id="@+id/view_phone_number"
            layout="@layout/card_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_12_dp" />

        <include
            android:id="@+id/view_sex"
            layout="@layout/card_field"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/distance_12_dp" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>