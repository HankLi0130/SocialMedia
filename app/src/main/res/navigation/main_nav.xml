<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="dev.hankli.iamstar.ui.auth.AuthFragment"
        android:label="AuthFragment"
        tools:layout="@layout/fragment_auth">

        <action
            android:id="@+id/action_authFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/feedFragment"
        android:name="dev.hankli.iamstar.ui.feed.FeedFragment"
        android:label="FeedFragment"
        tools:layout="@layout/fragment_feed">

        <action
            android:id="@+id/action_feedFragment_to_editFeedFragment"
            app:destination="@id/editPostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_commentFragment"
            app:destination="@id/commentFragment" />

    </fragment>

    <fragment
        android:id="@+id/editPostFragment"
        android:name="dev.hankli.iamstar.ui.feed.EditFeedFragment"
        android:label="EditPostFragment"
        tools:layout="@layout/fragment_edit_feed">

        <argument
            android:name="feedId"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/commentFragment"
        android:name="dev.hankli.iamstar.ui.comment.CommentFragment"
        android:label="CommentFragment"
        tools:layout="@layout/fragment_comment">

        <argument
            android:name="feedId"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="dev.hankli.iamstar.ui.profile.ProfileFragment"
        android:label="ProfileFragment"
        tools:layout="@layout/fragment_profile" />

    <action
        android:id="@+id/action_global_authFragment"
        app:destination="@id/authFragment"
        app:launchSingleTop="true"
        app:popUpTo="@id/main_nav"
        app:popUpToInclusive="true" />

</navigation>