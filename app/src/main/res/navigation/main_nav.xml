<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_nav"
    app:startDestination="@id/feedFragment">

    <fragment
        android:id="@+id/authFragment"
        android:name="dev.hankli.iamstar.ui.auth.AuthFragment"
        tools:layout="@layout/fragment_auth">

        <action
            android:id="@+id/action_authFragment_to_feedFragment"
            app:destination="@id/feedFragment"
            app:launchSingleTop="true"
            app:popUpTo="@id/main_nav"
            app:popUpToInclusive="true" />

    </fragment>

    <fragment
        android:id="@+id/feedFragment"
        android:name="dev.hankli.iamstar.ui.feed.FeedFragment"
        android:label="@string/feed"
        tools:layout="@layout/fragment_feed">

        <action
            android:id="@+id/action_feedFragment_to_editFeedFragment"
            app:destination="@id/editPostFragment" />
        <action
            android:id="@+id/action_feedFragment_to_commentFragment"
            app:destination="@id/commentFragment" />
        <action
            android:id="@+id/action_feedFragment_to_mediaFragment"
            app:destination="@id/mediaReviewFragment" />

    </fragment>

    <fragment
        android:id="@+id/editPostFragment"
        android:name="dev.hankli.iamstar.ui.feed.EditFeedFragment"
        android:label="@string/feed_edit"
        tools:layout="@layout/fragment_edit_feed">

        <argument
            android:name="feedId"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/commentFragment"
        android:name="dev.hankli.iamstar.ui.comment.CommentFragment"
        android:label="@string/comments"
        tools:layout="@layout/fragment_comment">

        <argument
            android:name="feedId"
            app:argType="string" />

    </fragment>

    <fragment
        android:id="@+id/profileFragment"
        android:name="dev.hankli.iamstar.ui.profile.ProfileFragment"
        android:label="@string/profile"
        tools:layout="@layout/fragment_profile">
        <action
            android:id="@+id/action_profileFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>

    <action
        android:id="@+id/action_global_authFragment"
        app:destination="@id/authFragment"
        app:launchSingleTop="true"
        app:popUpTo="@id/main_nav"
        app:popUpToInclusive="true" />

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="dev.hankli.iamstar.ui.profile.EditProfileFragment"
        android:label="@string/profile_edit"
        tools:layout="@layout/fragment_edit_profile" />

    <fragment
        android:id="@+id/mediaReviewFragment"
        android:name="dev.hankli.iamstar.ui.media.MediaReviewFragment"
        tools:layout="@layout/fragment_media_review">

        <argument
            android:name="url"
            app:argType="string" />
        <argument
            android:name="type"
            app:argType="string" />
        <argument
            android:name="width"
            app:argType="integer" />
        <argument
            android:name="height"
            app:argType="integer" />

    </fragment>

</navigation>